<div class="container p-4">
    <div class="row">
        {{#each pedidos}}
            <div class="col-md-3" >
                <div class="card tex-uppercase tex-center text-white rounded">
                    <div class="card-body text-danger" >
                        {{!-- <div>
                            <img src="/links/imagen/{{this.id}}" alt="Imagen de {{this.Titulo}}" class="imagenes-productos mx-auto d-block rounded">
                            <h3 class="card-title text-uppercase text-center">
                                {{Titulo}}
                            </h3>
                        </div> --}}
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{nombre}}</li>
                        <li class="list-group-item">{{apellido}}</li>
                        <li class="list-group-item">{{Pedido}}</li>
                        <li class="list-group-item">{{Direccion}}</li>
                        <li class="list-group-item">{{Numero}}</li>
                        <li class="list-group-item">{{Sector}}</li>
                        <li class="list-group-item">{{Punto}}</li>
                        <li class="list-group-item">{{timeago created_at}}</li>
                        <li class="btn btn-success m-2"> <a href="/links/delete/{{id}}" class="text-light text-decoration-none">Eliminar</a></li>
                        <li class="btn btn-danger m-2"> <a href="/links/edit/{{id}}" class="text-light text-decoration-none">Editar</a></li>
                    </ul>
                    </div>

                </div>
            </div>
            {{else}}
              <div class="col-md-4 mx-auto">
                <div class="card car-body text-center">
                    <p>No Tienes Pedidos por el momento</p>
                </div>

              </div>
        {{/each}}
    </div>
</div>